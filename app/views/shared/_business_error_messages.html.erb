<% if @business.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@business.errors.count, "error") %>.
    </div>
    <ul>
    <% @business.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>