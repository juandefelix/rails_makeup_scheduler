<%= provide(:title, "User Registration")%>

<div class=row>
  <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>    
          
        <div class="field form-group">
          <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: 'form-control'  %>
        </div>

        <div class="field form-group">
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control'  %>
        </div>
    
        <div class="field form-group">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <br />
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control'  %>
        </div>
    
        <div class="field form-group">
          <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off", class: 'form-control'  %>
        </div>
    
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary new-button" %>
        </div>
      <% end %>
      <br>
      <%= render "users/shared/links" %>
    </div>
</div>